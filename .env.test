# Configuración de entorno para TESTS
# ⚠️ IMPORTANTE: Este archivo contiene configuración SOLO para tests
# NO utilizar estas configuraciones en producción

# Entorno obligatorio para tests
NODE_ENV=test
REACT_APP_RECAPTCHA_SITE_KEY=tu_clave_publica_recaptcha

# Configuración del Frontend
REACT_APP_NODE_ENV=test
REACT_APP_CYPRESS_BASE_URL=https://localhost
REACT_THROTTLE_DELAY_MS=4000     # Wait 4 seconds every attempt
REACT_THROTTLE_MAX_ATTEMPTS=10   # Max 10 fail attempts
REACT_THROTTLE_WINDOW_MS=300000  # Within 5 minutes

# Configuración de la API
REACT_APP_API_URL=https://localhost/api

# Configuración de Base de Datos para TESTS
# ⚠️ SEGURIDAD: Nombres y usuarios deben contener "test"
REACT_APP_DB_HOST=localhost
REACT_APP_DB_PORT=3306
REACT_APP_DB_NAME=acamae_test
REACT_APP_DB_USER=acamae_test
REACT_APP_DB_PASSWORD=acamae_test_password

# Configuración de administrador de BD para TESTS
# ⚠️ SEGURIDAD: Solo para localhost, nunca hosts remotos
REACT_APP_DB_ADMIN_USER=root
REACT_APP_DB_ADMIN_PASSWORD=rootpassword

# Configuración de Cypress
CYPRESS_baseUrl=https://localhost
CYPRESS_video=false
CYPRESS_screenshotOnRunFailure=true

# Configuración de Jest
JEST_COVERAGE_THRESHOLD=85

# ⚠️ MEDIDAS DE SEGURIDAD IMPLEMENTADAS:
# 1. NODE_ENV debe ser "test"
# 2. Nombres de BD y usuarios deben contener "test"
# 3. Hosts remotos con puertos estándar están prohibidos
# 4. BD y usuarios de producción están en lista negra
# 5. Validaciones en tiempo de ejecución
