{
  "compilerOptions": {
    "target": "es2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/domain/types"],
    "types": ["node", "jest", "cypress"],
    "paths": {
      "@/*": ["*"],
      "@ui/*": ["ui/*"],
      "@domain/*": ["domain/*"],
      "@application/*": ["application/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@i18n/*": ["infrastructure/i18n/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["cypress/**/*.ts", "src/**/*", "setupTests.ts", "jest.config.js", "cypress.config.js", "checkCoverage.mjs", "webpack.config.js"],
  "exclude": ["node_modules"]
}